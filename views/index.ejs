<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='/css/style.css' />
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/bower_components/angular/angular.min.js"></script>
    <script src="/bower_components/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="/js/module.js"></script>
  </head>
  <body ng-app="someApp" ng-controller="homeCtrl">
    <div class="jumbotron">
      <h1><%= title %></h1>
    </div>
    <div class="container">
      <!-- <my-table data='users'></my-table> -->
      <label for="">Description:</label>
      <input type="text" ng-model="todo.description">
      <button class="btn btn-success btn-lg" ng-click="addTodo(todo)">Add Todo</button>
    
      <!-- {{todos}} -->
      <table>
        <thead>
          <tr>            
              <th ng-click="sort('date')">#</th>
              <th ng-click="sort('')">Description</th>
              <th ng-click="sort('date')">Date</th>
              <th ng-click="sort('iscomplete')">Complete?</th>
              <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat='item in todos | orderBy:sorttext track by $index'>
            <!-- <td ng-repeat='value in item '>{{value}}</td> -->
            
            <td>{{$index}}</td>
            <td>{{item.description}}</td>
            <td>{{item.date}}</td>
            <td ng-click="toggle(item, $index)">
              <div class="btn btn-primary btn-sm">                
                {{item.iscomplete}}</td>
              </div>
            <td ng-click="remove(item, $index)">
              <div class="btn btn-danger btn-sm">
                <span class="glyphicon glyphicon-trash"></span>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </body>
</html>
